<%= link_to 'New Link', new_link_path %><%= logout_button %>

<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Destination</th>
      <th>Short code</th>
      <th>Admin code</th>
      <th>Use count</th>
      <th>Expired at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.destination %></td>
        <td><%= link.short_code %></td>
        <td><%= link.admin_code %></td>
        <td><%= link.use_count %></td>
        <td><%= link.expired_at %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
